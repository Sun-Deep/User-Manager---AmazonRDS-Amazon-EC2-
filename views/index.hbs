<div class="col">
    <p class="display-4">Users List</p>
    <table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Full Name</th>
      <th scope="col">Email</th>
      <th scope="col">Address</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
      {{#each users}}
            <tr>
                <td>{{id}}</td>
                <td>{{full_name}}</td>
                <td>{{email}}</td>
                <td>{{address}}</td>
                <td>
                    <a href="/users/{{id}}" class="btn btn-sm btn-outline-warning" role="button" aria-pressed="true">Edit</a>
                    <a href="/users/remove/{{id}}" _method="delete" class="btn btn-sm btn-outline-danger" role="button" aria-pressed="true">Delete</a>
                </td>
            </tr>
      {{/each}}
  </tbody>
</table>
</div>